{% set bodyClass = 'holding' %}

{% extends "default/_layouts/base" %}

{% block body %}

{% block main %}


<div class="grid-y align-center primary-background-color viewheight">
  <div class="shrink cell">

  <div class="grid-x grid-padding-x align-center">
    <div class="small-11 medium-6 cell text-center">
      <h1 class="sans-bold font-wide margin-bottom-0 text-uppercase margin-bottom-2">Ambigu</h1>
      {{entry.copy}}
    </div>
  </div>


  
  <div class="grid-x grid-padding-x grid-padding-y align-center padding-vertical-2">
    <div class="shrink cell">

      <ul class="menu align-middle">
        {% for block in site.socials.all() %}
        {% switch block.type %}
          {% case "facebook" %}
          <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-facebook"><use xlink:href="/assets/icons/symbol-defs.svg#icon-facebook"></use></svg></a></li>
          {% case "instagram" %}
          <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-instagram"><use xlink:href="/assets/icons/symbol-defs.svg#icon-instagram"></use></svg></a></li>
          {% case "twitter" %}
          <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-twitter"><use xlink:href="/assets/icons/symbol-defs.svg#icon-twitter"></use></svg></a></li>
          {% endswitch %}
        {% endfor %}
      </ul>

    </div>
  </div>




  </div>
</div>

{% endblock %}


{% endblock %}